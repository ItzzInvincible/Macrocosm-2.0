{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "identifier",
    "type": "string",
    "title": "An identifier, optionally with a namespace",
    "pattern": "^([a-z_]+:)?[a-z_/]+$",
    "examples": [
        "minecraft:diamond",
        "diamond",
        "namespace:path/file.txt",
        "macrocosm:registry/custom"
    ]
}
