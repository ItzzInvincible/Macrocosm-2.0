{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "macrocosm:recipe",
    "type": "object",
    "title": "Root tag",
    "propertyNames": {
        "$ref": "shared/identifier.json"
    },
    "additionalProperties": {
        "oneOf": [
            {
                "properties": {
                    "pattern": {
                        "type": "array",
                        "title": "The shape that items must be put in",
                        "minItems": 1,
                        "maxItems": 3,
                        "items": {
                            "type": "string",
                            "pattern": "^.{1,3}$"
                        }
                    },
                    "matrix": {
                        "type": "object",
                        "title": "All keys used in 'pattern'",
                        "minItems": 0,
                        "maxItems": 9,
                        "additionalProperties": {
                            "oneOf": [
                                {
                                    "$ref": "#/definitions/input",
                                    "description": "The single character representing this item"
                                }
                            ]
                        },
                        "propertyNames": {
                            "type": "string",
                            "pattern": "^.$"
                        }
                    },
                    "result": {
                        "$ref": "shared/identifier.json"
                    },
                    "amount": {
                        "type": "integer",
                        "title": "Amount of items",
                        "minimum": 1,
                        "maximum": 64
                    }
                },
                "required": ["pattern", "matrix"]
            },
            {
                "properties": {
                    "ingredients": {
                        "type": "array",
                        "title": "Ingredients of this recipe",
                        "minItems": 1,
                        "maxItems": 9,
                        "items": {
                            "$ref": "#/definitions/input",
                            "description": "An ingredient"
                        }
                    },
                    "result": {
                        "$ref": "shared/identifier.json"
                    },
                    "amount": {
                        "type": "integer",
                        "title": "Amount of items",
                        "minimum": 1,
                        "maximum": 64
                    }
                },
                "required": ["ingredients"]
            }
        ]
    },
    "definitions": {
        "input": {
            "oneOf": [
                {
                    "additionalProperties": false,
                    "type": "object",
                    "properties": {
                        "item": {
                            "$ref": "shared/identifier.json"
                        },
                        "amount": {
                            "type": "integer",
                            "title": "Amount of items",
                            "minimum": 1,
                            "maximum": 64
                        }
                    },
                    "required": ["item", "amount"]
                },
                {
                    "additionalProperties": false,
                    "type": "string",
                    "title": "ID of the item used, with amount being set to 1"
                }
            ]
        }
    }
}
